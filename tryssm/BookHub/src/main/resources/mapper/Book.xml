<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.liujianwei.repository.BookRepository">
    <resultMap id="Book" type="tech.liujianwei.model.Book">
        <id column="book_id" property="id"/>
        <result column="book_id" property="id"/>
        <result column="book_name" property="name"/>
        <collection property="authors" ofType="tech.liujianwei.model.Author">
            <id column="author_id" property="id"/>
            <result column="author_name" property="name"/>
            <result column="author_nationality" property="nationality"/>
        </collection>
    </resultMap>
    <sql id="bookFields">
        book.id as "book_id",
        book.name as "book_name",
        author.id as "author_id",
        author.name as "author_name",
        author.nationality as "author_nationality"
    </sql>
    <select id="getBook" parameterType="int" resultMap="Book">
        SELECT
        <include refid="bookFields"/>
        FROM
            book
                INNER JOIN
            authoring ON book.id = authoring.book
                INNER JOIN
            author ON authoring.author = author.id
        WHERE
            book.id = #{id}
    </select>
    <insert id="addBook" parameterType="tech.liujianwei.model.Book" keyProperty="id" useGeneratedKeys="true">
        insert into book (name) values (#{name})
    </insert>
</mapper>