<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.liujianwei.repository.BookRepository">
    <sql id="bookFields">
        book.id as "id",
        book.name as "name"
    </sql>
    <select id="getBook" parameterType="int" resultType="tech.liujianwei.model.Book">
        select
        <include refid="bookFields"/>
        from book as book where id=#{id}
    </select>
</mapper>